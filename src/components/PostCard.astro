---
import '@components/PostCard.scss';

export interface Props {
    id: string;
    lang: string;
    title: string;
    description: string;
    length: string;
    topic: string;
    author: string;
    date: string;
    image: string;
}

const { id, lang, title, description, length, topic, author, date, image } = Astro.props;
---

<a href={lang == "es" ? `/posts/${id}` : `/en/posts/${id}`} class={`post post--${id} relative box-shadow`} style={`background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(${image})`}>
    <div class="post__title">
        <h3>{title}</h3>
    </div>  
    <div class="post__description">
        <Fragment set:html={description} />
    </div>
    <div class="post__details flex flex-align-center flex-justify-left">
        <p><b>{lang == "es" ? "Tiempo de lectura:" : "Reading time:"}</b> {length}</p>
        <p><b>{lang == "es" ? "Tema:" : "Topic:"}</b> {topic}</p>
        <p><b>{lang == "es" ? "Autor:" : "Author:"}</b> {author}</p>
        <p><b>{lang == "es" ? "Fecha:" : "Date:"}</b> {date}</p>
    </div>
</a>