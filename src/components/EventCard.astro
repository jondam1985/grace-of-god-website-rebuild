---
import "@components/EventCard.scss";
export interface Props {
    title: string;
    description: string;
    date: string;
    location: string;
    locationHref: string;
    addedClass: string;
}

const { title, description, date, location, locationHref, addedClass } = Astro.props;
---

<div class={`event-card ${addedClass}`}>
    <div class="event__content">
        <h3 class="event__title text-center">{title}</h3>
        <p class="event__description">{description}</p>
        <p class="event__date">When: <b>{date}</b></p>
        <p class="event__location">Where: <a class="inline" href={locationHref}><b>{location}</b></a></p>
    </div>
</div>